<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="64dp"
        android:gravity="center_vertical">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/ed_phone"
            style="@style/EditTextPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            tools:ignore="HardcodedText" />

    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:gravity="center_vertical">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/ed_smsCode"
                style="@style/EditTextSmsCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="left" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_sendSmsCode"
            android:layout_width="81dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/btn_color"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:gravity="center_vertical">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/ed_password"
            style="@style/EditTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/ic_agreement_selector"
            android:drawablePadding="5dp" />

        <TextView
            android:id="@+id/btn_checkAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agree_agreement"
            android:textColor="@color/text_color_less" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/btn_color"
        android:textSize="@dimen/text_normal"
        tools:ignore="HardcodedText" />

</LinearLayout>