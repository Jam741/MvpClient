<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_whide"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/btn_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/case_list_nav_style"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_style"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_style"
            android:src="@mipmap/filter_arrow"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_hx"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_hx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/case_list_nav_fx"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_hx"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_hx"
            android:src="@mipmap/filter_arrow"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/case_list_nav_time"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_time"
            android:src="@mipmap/filter_arrow"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</LinearLayout>
